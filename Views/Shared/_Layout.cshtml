            var userLat = 24.8607;  // Example user's latitude
            var userLng = 67.0011;  // Example user's longitude

            // Make an AJAX request to the server to request an ambulance
            fetch('/Ambulance/RequestAmbulance', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ patientLat: userLat, patientLng: userLng })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.driverId) {
                        alert("Ambulance is on the way! Nearest driver ID: " + data.driverId + " ETA: " + data.eta + " minutes.");
