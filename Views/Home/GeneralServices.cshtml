@model List<Tuple<string, string>>

@{
    ViewData["Title"] = "General Services";
}

@await Html.PartialAsync("Breadcrumb", Model)

<section class="service-details-area">
    <div class="container">
        <div class="row">

            <!-- Start Service Details Sidebar -->
            <div class="col-xl-4 col-lg-5 order-box-2">
                <div class="service-details__sidebar">

                    <div class="view-all-service" data-aos="slide-up" data-aos-easing="linear" data-aos-duration="1000">
                        <ul class="service-pages">
                            <li class="active">
                                <a asp-action="AmbulanceCar" asp-controller="Home">
                                    Ambulance Car <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="MedicalEscort" asp-controller="Home">
                                    Medical Escort <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="AdvancedLifeSupport" asp-controller="Home">
                                    Advanced Life Support <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="GeneralServices" asp-controller="Home">
                                    General Services <span class="icon-next-1"></span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="service-details-contact-info" data-aos="slide-up" data-aos-easing="linear"
                         data-aos-duration="1000">
                        <div class="sidebar-info-box-bg"
                             style="background-image: url('~/homeassets/images/sidebar/sidebar-info-box-bg.jpg');"></div>
                        <h3>Need Help?</h3>
                        <p>
                            Need help or more information about our general services? Contact us today and speak with one of our team members for assistance.
                        </p>
                        <h2><a href="tel:+50033333">+ 1- (246) 333-0089</a></h2>
                    </div>

                    <div class="info-download-box" data-aos="slide-up" data-aos-easing="linear"
                         data-aos-duration="1000">
                        <ul>
                            <li>
                                <div class="icon">
                                    <span class="icon-checked-1"></span>
                                </div>
                                <div class="title">
                                    <h5><a asp-action="GeneralServices" asp-controller="Home">Download our Brochure</a></h5>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- End Service Details Sidebar -->
            <!-- Start Service Details Content -->
            <div class="col-xl-8 col-lg-7 order-box-1">
                <div class="service-details__content">
                    <div class="img-box1">
                        <img src="~/homeassets/images/services/service-details-6-img1.jpg" alt="General Services Image" />
                    </div>

                    <div class="text-box1">
                        <h2>General Services</h2>
                        <p>
                            At Rapid Rescue, we offer a wide range of emergency medical services tailored to meet the diverse needs of our community. Our general services include ambulance transportation, non-emergency medical transport, patient transfer between healthcare facilities, and more. Our dedicated team is committed to ensuring safe and efficient medical care in every situation.
                        </p>
                        <p>
                            Whether you need urgent care during an emergency or require a routine medical transfer, Rapid Rescue is here to help. We provide a seamless experience, focusing on patient safety and care coordination with hospitals and medical facilities. With our advanced technology and highly skilled personnel, we guarantee top-quality service and care.
                        </p>
                    </div>

                    <div class="text-box2">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="text-box2-single" data-aos="fade-right" data-aos-easing="linear"
                                     data-aos-duration="2500">
                                    <h4>
                                        <span class="icon-right-arrow"></span> Help us Save a Life
                                    </h4>
                                    <p>
                                        By utilizing our general services, you are contributing to saving lives. Every call we respond to is an opportunity to provide lifesaving medical care and transportation.
                                    </p>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <div class="text-box2-single" data-aos="fade-left" data-aos-easing="linear"
                                     data-aos-duration="2500">
                                    <h4>
                                        <span class="icon-right-arrow"></span> Join Our Big Family
                                    </h4>
                                    <p>
                                        At Rapid Rescue, we consider our patients and their families part of our larger community. Join us in building a future where timely medical response is available to everyone.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-box3">
                        <p>
                            Our general services are not limited to emergencies. We provide non-emergency medical transportation for patients requiring routine visits to hospitals, rehabilitation centers, or specialists. With our network of ambulances and medical professionals, we make sure that every patient receives the best care, no matter the situation.
                        </p>
                    </div>

                    <div class="text-box4">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="content-box">
                                    <h2>Service Benefits</h2>
                                    <p>
                                        Our General Services offer a wide range of benefits for patients and healthcare providers:
                                    </p>

                                    <ul>
                                        <li>
                                            <span class="icon-checked"></span> Available for both emergency and non-emergency transport
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> 24/7 availability and rapid response times
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> Safe and reliable patient transfer services
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> Highly trained medical professionals
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <div class="img-box">
                                    <img src="~/homeassets/images/services/service-details-img2.jpg" alt="Service Benefits Image" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Section -->
                    <div class="faq-style1__content">
                        <ul class="accordion-box">
                            <li class="accordion block active-block">
                                <div class="acc-btn active">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>What types of general services do you provide?</h3>
                                </div>
                                <div class="acc-content current">
                                    <p>
                                        Our general services include emergency medical transportation, non-emergency medical transport, patient transfers between facilities, and more. We cater to a wide range of medical needs, ensuring patients receive timely and efficient care.
                                    </p>
                                </div>
                            </li>
                            <li class="accordion block">
                                <div class="acc-btn">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>Is your service available 24/7?</h3>
                                </div>
                                <div class="acc-content">
                                    <p>
                                        Yes, Rapid Rescue's services are available 24/7 to respond to both emergency and non-emergency needs. Our team is always ready to assist, no matter the time of day.
                                    </p>
                                </div>
                            </li>
                            <li class="accordion block">
                                <div class="acc-btn">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>How do I book your general services?</h3>
                                </div>
                                <div class="acc-content">
                                    <p>
                                        You can book our general services by calling our helpline or using our online booking system. We will coordinate your transport and ensure you receive timely and professional care.
                                    </p>
                                </div>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
            <!-- End Service Details Content -->

        </div>
    </div>
</section>
