<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Google Maps View</title>
    <style>
        #map {
            height: 600px;
            width: 100%;
        }
    </style>
</head>
<body>
    <h3>Map View - Karachi</h3>
    <div id="map"></div>
    <script>
        function initMap() {
            var karachi = { lat: 24.8607, lng: 67.0011 }; // Karachi coordinates

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 13,  // Similar zoom level to the image you shared
                center: karachi
            });

            var marker = new google.maps.Marker({
                position: karachi,
                map: map,
                title: "Karachi"
            });
        }
    </script>

    <!-- Include the Google Maps API -->
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_pOFVReydm5XRyae2wxzFEPyWnEUzOf4&callback=initMap">
    </script>
</body>
</html>
