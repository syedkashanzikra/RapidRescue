@model Contact
@* @model List<Tuple<string, string>> *@

@{
    ViewData["Title"] = "Frequently Asked Questions";
}


@await Html.PartialAsync("Breadcrumb", (List<Tuple<string, string>>)ViewBag.Breadcrumbs)
<section class="faq-page-one">
    <div class="container">
        <div class="row">

            <div class="col-xl-6">
                <div class="faq-style1-content">
                    <ul class="accordion-box">
                        <li class="accordion block active-block">
                            <div class="acc-btn active">
                                <div class="icon-outer">
                                    <i class="flaticon-down-arrow-2"></i>
                                </div>
                                <h3>
                                    How do I book an ambulance through Rapid Rescue?
                                </h3>
                            </div>
                            <div class="acc-content current">
                                <p>
                                    You can book an ambulance through our app or website by clicking the “Book Ambulance” button. The nearest ambulance will be dispatched to your location immediately, and you can fill in any additional details afterward.
                                </p>
                            </div>
                        </li>
                        <li class="accordion block">
                            <div class="acc-btn">
                                <div class="icon-outer">
                                    <i class="flaticon-down-arrow-2"></i>
                                </div>
                                <h3>
                                    Are your services available 24/7?
                                </h3>
                            </div>
                            <div class="acc-content">
                                <p>
                                    Yes, Rapid Rescue is available 24/7 to ensure that you receive emergency medical transportation whenever needed, no matter the time of day.
                                </p>
                            </div>
                        </li>
                        <li class="accordion block">
                            <div class="acc-btn">
                                <div class="icon-outer">
                                    <i class="flaticon-down-arrow-2"></i>
                                </div>
                                <h3>
                                    What information do I need to provide during an emergency booking?
                                </h3>
                            </div>
                            <div class="acc-content">
                                <p>
                                    In case of an emergency, simply provide your location and confirm the type of service you need. Detailed information can be provided after the ambulance arrives.
                                </p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-xl-6">
                <div class="faq-style1-content faq-style1-content--margintop">
                    <ul class="accordion-box">
                        <li class="accordion block active-block">
                            <div class="acc-btn active">
                                <div class="icon-outer">
                                    <i class="flaticon-down-arrow-2"></i>
                                </div>
                                <h3>
                                    Do you offer non-emergency medical transport?
                                </h3>
                            </div>
                            <div class="acc-content current">
                                <p>
                                    Yes, we provide non-emergency medical transport for patients who need to be transported between hospitals, rehabilitation centers, or for scheduled appointments.
                                </p>
                            </div>
                        </li>
                        <li class="accordion block">
                            <div class="acc-btn">
                                <div class="icon-outer">
                                    <i class="flaticon-down-arrow-2"></i>
                                </div>
                                <h3>
                                    How do I track the ambulance after booking?
                                </h3>
                            </div>
                            <div class="acc-content">
                                <p>
                                    Once your booking is confirmed, you can track the ambulance in real-time through the app, and you will also receive notifications with the estimated time of arrival.
                                </p>
                            </div>
                        </li>
                        <li class="accordion block">
                            <div class="acc-btn">
                                <div class="icon-outer">
                                    <i class="flaticon-down-arrow-2"></i>
                                </div>
                                <h3>
                                    What payment methods do you accept?
                                </h3>
                            </div>
                            <div class="acc-content">
                                <p>
                                    We accept various payment methods, including credit/debit cards, mobile payments, and direct billing with select insurance providers. Please check our payment options during booking.
                                </p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</section>
<!--End Faq Page One-->
<!--Start Faq Form Area-->
<section class="faq-form-area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="faq-form-box">
                    <div class="sec-title text-center">
                        <div class="icon">
                            <span class="icon-heartbeat"></span>
                        </div>
                        <div class="sub-title">
                            <h3>Send us a Message</h3>
                        </div>
                        <h2>Write to Us Anytime</h2>
                    </div>
                    <form asp-action="Contact" asp-controller="Home" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-xl-6">
                                <div class="input-box">
                                    <input asp-for="FullName" class="form-control" placeholder="Full name" required="" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="input-box">
                                    <input asp-for="Email" class="form-control" placeholder="Email address" required="" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <div class="input-box">
                                        <input asp-for="Phone" type="tel" style="position: relative;
    display: block;
    background: #f2f3fa;
    border: 1px solid #f2f3fa;
    width: 100%;
    height: 60px;
    color: #797989;
    font-size: 14px;
    font-weight: 700;
    font-style: normal;
    padding-left: 30px;
    padding-right: 30px;
    border-radius: 0px;
    transition: all 500ms ease;
    font-family: var(--thm-font);" class="form-control" placeholder="Phone" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="input-box">
                                    <input asp-for="Subject" class="form-control" placeholder="Subject" />
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="input-box">
                                    <textarea asp-for="Message" class="form-control" placeholder="Your Question ..." required=""></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="button-box">
                            <button class="btn-one" type="submit" data-loading-text="Please wait...">
                                <span class="txt">Send Request</span>
                            </button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
</section>
<!--End Faq Form Area-->
