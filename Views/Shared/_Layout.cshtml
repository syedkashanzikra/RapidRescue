    <script>

        var map;
        var driverMarkers = {};

        function initMap() {
            var patientLocation = { lat: 24.8607, lng: 67.0011 };  // Example patient coordinates
            map = new google.maps.Map(document.getElementById('map'), {
                zoom: 13,
                center: patientLocation
            });

            const connection = new signalR.HubConnectionBuilder().withUrl("/ambulanceHub").build();

            connection.start().catch(err => console.error(err.toString()));

            connection.on("ReceiveLocationUpdate", function (driverId, latitude, longitude) {
                if (driverMarkers[driverId]) {
                    driverMarkers[driverId].setPosition({ lat: latitude, lng: longitude });
                } else {
                    var marker = new google.maps.Marker({
                        position: { lat: latitude, lng: longitude },
                        map: map,
                        title: "Driver " + driverId
                    });
                    driverMarkers[driverId] = marker;
                }
            });
        }

        // Request Ambulance button logic
