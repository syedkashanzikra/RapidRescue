@model List<Tuple<string, string>>

@{
    ViewData["Title"] = "Advanced Life Support";
}

@await Html.PartialAsync("Breadcrumb", Model)

<section class="service-details-area">
    <div class="container">
        <div class="row">

            <!-- Start Service Details Sidebar -->
            <div class="col-xl-4 col-lg-5 order-box-2">
                <div class="service-details__sidebar">

                    <div class="view-all-service" data-aos="slide-up" data-aos-easing="linear" data-aos-duration="1000">
                        <ul class="service-pages">
                            <li class="active">
                                <a asp-action="AmbulanceCar" asp-controller="Home">
                                    Ambulance Car <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="MedicalEscort" asp-controller="Home">
                                    Medical Escort <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="AdvancedLifeSupport" asp-controller="Home">
                                    Advanced Life Support <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="GeneralServices" asp-controller="Home">
                                    General Services <span class="icon-next-1"></span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="service-details-contact-info" data-aos="slide-up" data-aos-easing="linear"
                         data-aos-duration="1000">
                        <div class="sidebar-info-box-bg"
                             style="background-image: url('~/homeassets/images/sidebar/sidebar-info-box-bg.jpg');"></div>
                        <h3>Need Help?</h3>
                        <p>
                            Need immediate assistance or have a question about our services? Call our office, and we will connect you with a team member who can help.
                        </p>
                        <h2><a href="tel:+50033333">+ 1- (246) 333-0089</a></h2>
                    </div>

                    <div class="info-download-box" data-aos="slide-up" data-aos-easing="linear"
                         data-aos-duration="1000">
                        <ul>
                            <li>
                                <div class="icon">
                                    <span class="icon-checked-1"></span>
                                </div>
                                <div class="title">
                                    <h5><a asp-action="AdvancedLifeSupport" asp-controller="Home">Download our Brochure</a></h5>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- End Service Details Sidebar -->
            <!-- Start Service Details Content -->
            <div class="col-xl-8 col-lg-7 order-box-1">
                <div class="service-details__content">
                    <div class="img-box1">
                        <img src="~/homeassets/images/services/service-details-5-img1.jpg" alt="Advanced Life Support Image" />
                    </div>

                    <div class="text-box1">
                        <h2>Advanced Life Support (ALS)</h2>
                        <p>
                            Rapid Rescue’s Advanced Life Support (ALS) service is designed for critical emergencies where intensive medical interventions are required. Our ALS-equipped ambulances are staffed with highly trained paramedics and equipped with life-saving equipment to manage severe medical conditions during transport.
                        </p>
                        <p>
                            The ALS service includes advanced airway management, intravenous medications, cardiac monitoring, defibrillation, and other critical care procedures. Whether you’re experiencing a heart attack, stroke, or other life-threatening conditions, our ALS team is prepared to provide the highest level of care during transportation.
                        </p>
                    </div>

                    <div class="text-box2">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="text-box2-single" data-aos="fade-right" data-aos-easing="linear"
                                     data-aos-duration="2500">
                                    <h4>
                                        <span class="icon-right-arrow"></span> Help Us Save Lives
                                    </h4>
                                    <p>
                                        Our ALS services ensure that critical patients receive immediate, life-saving care on their way to the hospital. Your support helps us continue to provide high-quality emergency medical care.
                                    </p>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <div class="text-box2-single" data-aos="fade-left" data-aos-easing="linear"
                                     data-aos-duration="2500">
                                    <h4>
                                        <span class="icon-right-arrow"></span> Join Our Mission
                                    </h4>
                                    <p>
                                        Become a part of the Rapid Rescue family by supporting our mission to deliver life-saving medical transportation to those who need it most.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-box3">
                        <p>
                            Our ALS team works in close coordination with healthcare facilities to ensure a smooth transition of care when patients arrive at the hospital. We understand that every second counts during critical medical emergencies, and we are committed to providing prompt, effective care.
                        </p>
                    </div>

                    <div class="text-box4">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="content-box">
                                    <h2>Service Benefits</h2>
                                    <p>
                                        Rapid Rescue’s Advanced Life Support service offers several benefits for patients in critical conditions:
                                    </p>

                                    <ul>
                                        <li>
                                            <span class="icon-checked"></span> 24/7 availability for emergency response
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> Highly trained paramedics and EMTs
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> Equipped with advanced life-saving medical equipment
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> Seamless coordination with hospitals for continued care
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <div class="img-box">
                                    <img src="~/homeassets/images/services/service-details-img2.jpg" alt="Service Benefits Image" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Section -->
                    <div class="faq-style1__content">
                        <ul class="accordion-box">
                            <li class="accordion block active-block">
                                <div class="acc-btn active">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>What is Advanced Life Support (ALS)?</h3>
                                </div>
                                <div class="acc-content current">
                                    <p>
                                        Advanced Life Support (ALS) is a critical emergency medical service provided by paramedics to treat life-threatening conditions such as cardiac arrest, respiratory failure, and major trauma. ALS ambulances are equipped with advanced medical equipment and staffed with highly trained professionals.
                                    </p>
                                </div>
                            </li>
                            <li class="accordion block">
                                <div class="acc-btn">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>When should I request ALS services?</h3>
                                </div>
                                <div class="acc-content">
                                    <p>
                                        ALS services are required in critical emergencies such as heart attacks, strokes, serious injuries, or when a patient requires advanced medical interventions during transport to a hospital.
                                    </p>
                                </div>
                            </li>
                            <li class="accordion block">
                                <div class="acc-btn">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>How is ALS different from Basic Life Support (BLS)?</h3>
                                </div>
                                <div class="acc-content">
                                    <p>
                                        ALS provides more advanced care than BLS, including advanced airway management, cardiac monitoring, IV therapy, and the ability to administer medications. BLS services, on the other hand, handle non-invasive care such as CPR and basic airway management.
                                    </p>
                                </div>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
            <!-- End Service Details Content -->

        </div>
    </div>
</section>
