@model List<Tuple<string, string>>

@{
    ViewData["Title"] = "Medical Escort Services";
}

@await Html.PartialAsync("Breadcrumb", Model)

<!-- Start Service Details area -->
<section class="service-details-area">
    <div class="container">
        <div class="row">

            <!-- Start Service Details Sidebar -->
            <div class="col-xl-4 col-lg-5 order-box-2">
                <div class="service-details__sidebar">

                    <div class="view-all-service" data-aos="slide-up" data-aos-easing="linear" data-aos-duration="1000">
                        <ul class="service-pages">
                            <li class="active">
                                <a asp-action="AmbulanceCar" asp-controller="Home">
                                    Ambulance Car <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="MedicalEscort" asp-controller="Home">
                                    Medical Escort <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="AdvancedLifeSupport" asp-controller="Home">
                                    Advanced Life Support <span class="icon-next-1"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="GeneralServices" asp-controller="Home">
                                    General Services <span class="icon-next-1"></span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="service-details-contact-info" data-aos="slide-up" data-aos-easing="linear"
                         data-aos-duration="1000">
                        <div class="sidebar-info-box-bg"
                             style="background-image: url('~/homeassets/images/sidebar/sidebar-info-box-bg.jpg');"></div>
                        <h3>Need Help?</h3>
                        <p>
                            Need assistance with booking a medical escort service? Call our office, and we will connect you with a representative who can assist.
                        </p>
                        <h2><a href="tel:+50033333">+ 1- (246) 333-0089</a></h2>
                    </div>

                    <div class="info-download-box" data-aos="slide-up" data-aos-easing="linear"
                         data-aos-duration="1000">
                        <ul>
                            <li>
                                <div class="icon">
                                    <span class="icon-checked-1"></span>
                                </div>
                                <div class="title">
                                    <h5><a asp-action="MedicalEscort" asp-controller="Home">Download our Brochure</a></h5>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- End Service Details Sidebar -->
            <!-- Start Service Details Content -->
            <div class="col-xl-8 col-lg-7 order-box-1">
                <div class="service-details__content">
                    <div class="img-box1">
                        <img src="~/homeassets/images/services/service-details-3-img1.jpg" alt="Medical Escort Services Image" />
                    </div>

                    <div class="text-box1">
                        <h2>Medical Escort Services</h2>
                        <p>
                            Rapid Rescue's Medical Escort Services offer professional, trained medical personnel to accompany patients who need medical supervision during travel. Whether the patient is traveling by air, land, or sea, our highly qualified medical staff provides continuous care, ensuring the patient’s well-being throughout the journey.
                        </p>
                        <p>
                            This service is ideal for patients who require medical monitoring but do not need the full setup of an air ambulance. Our medical escorts are experienced in handling various medical conditions and emergencies, ensuring the patient arrives safely and comfortably at their destination.
                        </p>
                    </div>

                    <div class="text-box2">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="text-box2-single" data-aos="fade-right" data-aos-easing="linear"
                                     data-aos-duration="2500">
                                    <h4>
                                        <span class="icon-right-arrow"></span> Help us Save a Life
                                    </h4>
                                    <p>
                                        By choosing Rapid Rescue’s Medical Escort Services, you're helping us provide life-saving care and comfort to patients who need medical supervision while traveling.
                                    </p>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <div class="text-box2-single" data-aos="fade-left" data-aos-easing="linear"
                                     data-aos-duration="2500">
                                    <h4>
                                        <span class="icon-right-arrow"></span> Join Our Big Family
                                    </h4>
                                    <p>
                                        Be part of a community dedicated to making medical transport services accessible to all, ensuring every patient has a safe journey with continuous care.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-box3">
                        <p>
                            Our medical escorts are highly trained professionals, including paramedics and nurses, capable of providing advanced medical care during the entire duration of the trip. With Rapid Rescue, patients can be assured that they are in safe hands every step of the way.
                        </p>
                    </div>

                    <div class="text-box4">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="content-box">
                                    <h2>Service Benefits</h2>
                                    <p>
                                        Here are some of the benefits of using our Medical Escort Services:
                                    </p>

                                    <ul>
                                        <li>
                                            <span class="icon-checked"></span> Professional medical staff escorting patients during transport
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> Continuous medical monitoring and support
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> Suitable for non-emergency and stabilized patients
                                        </li>
                                        <li>
                                            <span class="icon-checked"></span> Coordination with healthcare providers for seamless service
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <div class="img-box">
                                    <img src="~/homeassets/images/services/service-details-img2.jpg" alt="Service Benefits Image" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Section -->
                    <div class="faq-style1__content">
                        <ul class="accordion-box">
                            <li class="accordion block active-block">
                                <div class="acc-btn active">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>What is a Medical Escort Service?</h3>
                                </div>
                                <div class="acc-content current">
                                    <p>
                                        A Medical Escort Service provides a trained medical professional to accompany patients during their travels, offering medical support and monitoring throughout the journey.
                                    </p>
                                </div>
                            </li>
                            <li class="accordion block">
                                <div class="acc-btn">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>When should I use a Medical Escort Service?</h3>
                                </div>
                                <div class="acc-content">
                                    <p>
                                        Medical Escort Services are ideal for patients who are stable but require medical supervision or support while traveling. This is often used for long-distance travel when a patient doesn't need an air ambulance.
                                    </p>
                                </div>
                            </li>
                            <li class="accordion block">
                                <div class="acc-btn">
                                    <div class="icon-outer">
                                        <i class="icon-down-arrow"></i>
                                    </div>
                                    <h3>What is the cost of a Medical Escort Service?</h3>
                                </div>
                                <div class="acc-content">
                                    <p>
                                        The cost depends on factors like the distance, type of transportation, and level of medical care needed. Contact us for a detailed quote based on your specific situation.
                                    </p>
                                </div>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
            <!-- End Service Details Content -->

        </div>
    </div>
</section>
<!-- End Service Details area -->
